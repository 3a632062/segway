    "version": "0.2.0",
    "configurations": [
        {
            "name": "PC Debug",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "${config:python.pythonPath}",
            "program": "${workspaceFolder}/segway.py",
            "cwd": "${workspaceFolder}",
            "env": {},
            "envFile": "${workspaceFolder}/.env",
            "debugOptions": [
                "RedirectOutput"
            ]
        },
        {
            "name": "EV3",
            "type": "ev3devBrowser",
            "request": "launch",
            "program": "/home/robot/pythonic/segway.py"
        },
    ]
}